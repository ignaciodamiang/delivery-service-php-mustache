{{> header}} {{>navbar}}
<body class="bg-light">
  <div class="container mt-5 mb-5 col-12 justify-content-center rounded">
    <div class="accordion" id="accordionPanelsStayOpenExample">
      <div class="accordion-item">
        <h2 class="accordion-header" id="panelsStayOpen-headingOne">
          <button
            class="accordion-button"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#panelsStayOpen-collapseOne"
            aria-expanded="true"
            aria-controls="panelsStayOpen-collapseOne"
          >
            Modificar Usuario
          </button>
        </h2>
        <div
          id="panelsStayOpen-collapseOne"
          class="accordion-collapse collapse show"
          aria-labelledby="panelsStayOpen-headingOne"
        >
          <div class="accordion-body">
            {{#usuario}}
            <form action="/admin/modificarUsuario" method="post">
              <div class="form-row mb-2">
                <div class="form-group">
                  <label class="font-weight-bold mb-1"
                    >Nombre<span class="text-danger">*</span></label
                  >
                  <input
                    type="text"
                    required
                    name="nombre"
                    value="{{ nombre }}"
                    class="form-control"
                    placeholder="Nombre"
                  />
                </div>

                <div class="form-group mt-3">
                  <label class="font-weight-bold mb-1"
                    >Apellido<span class="text-danger">*</span></label
                  >
                  <input
                    type="text"
                    required
                    name="apellido"
                    value="{{ apellido }}"
                    class="form-control"
                    placeholder="Apellido"
                  />
                </div>

                <div class="form-group mt-3">
                  <label class="font-weight-bold mb-1"
                    >Legajo <span class="text-danger">*</span></label
                  >
                  <input
                    type="number"
                    required
                    name="legajo"
                    value="{{ legajo }}"
                    class="form-control"
                    placeholder="Legajo"
                  />
                </div>

                <div class="form-group mt-3">
                  <label class="font-weight-bold mb-1"
                    >DNI <span class="text-danger">*</span></label
                  >
                  <input
                    type="number"
                    required
                    name="dni"
                    value="{{ dni }}"
                    class="form-control"
                    placeholder="DNI"
                  />
                </div>

                <div class="form-group mt-3">
                  <label class="font-weight-bold mb-1"
                    >Fecha de nacimiento<span class="text-danger"
                      >*</span
                    ></label
                  >
                  <input
                    type="date"
                    required
                    name="fecha_nacimiento"
                    value="{{ fecha_nacimiento }}"
                    class="form-control"
                    placeholder="Fecha de nacimiento"
                  />
                </div>

                <div class="form-group mt-3">
                  <label class="font-weight-bold mb-1"
                    >Tipo de licencia<span class="text-danger">*</span></label
                  >
                  <input
                    type="text"
                    required
                    name="tipo_licencia"
                    value="{{ tipo_licencia }}"
                    class="form-control"
                    placeholder="Tipo de licencia"
                  />
                </div>

                <div class="form-group mt-3">
                  <select
                    class="form-select"
                    aria-label="Default select example"
                    name="id_tipoUsuario"
                  >
                    <option>Seleccione que tipo de usuario es</option>
                    <option value="1">Admin</option>
                    <option value="2">Gerente</option>
                    <option value="3">Chofer</option>
                    <option value="4">Mec치nico</option>
                  </select>
                </div>

                <div class="form-group mt-3">
                  <label class="font-weight-bold mb-1"
                    >Email<span class="text-danger">*</span></label
                  >
                  <input
                    type="email"
                    required
                    name="email"
                    value="{{ email }}"
                    class="form-control"
                    placeholder="Email"
                  />
                </div>

                <div class="form-group mt-3">
                  <label class="font-weight-bold mb-1"
                    >Nueva contrase침a<span class="text-danger">*</span></label
                  >
                  <input
                    type="text"
                    required
                    name="contrasenia"
                    value="{{ contrase침a }}"
                    class="form-control"
                    placeholder="Nueva contrase침a"
                  />
                </div>

                <input type="hidden" name="idUsuario" value="{{ id }}" />

                <button
                  type="submit"
                  class="btn btn-primary col-5 col-md-2 mt-4"
                >
                  Modificar usuario
                </button>
              </div>
            </form>
            {{/usuario}}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Optional JavaScript; choose one of the two! -->
  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
    crossorigin="anonymous"
  ></script>
</body>
