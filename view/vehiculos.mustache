{{> header}}
{{>navbar}}
<body class="bg-light">
<!--Vehiculos-->
<div class="container mt-4 col-12 justify-content-center rounded">

    {{#url}}
        <a class="btn btn-primary mb-3" href="{{url}}" role="button"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"/>
        </svg></a>
    {{/url}}

    <div class="accordion" id="accordionPanelsStayOpenExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                <button class="accordion-button" type="button" data-bs-toggle="collapse"
                    data-bs-target="#acordeonTodosLosVehiculos" aria-expanded="true"
                    aria-controls="panelsStayOpen-collapseOne">
                    Todos mis Vehiculos
                </button>
            </h2>
            <div id="acordeonTodosLosVehiculos" class="accordion-collapse collapse show"
                aria-labelledby="panelsStayOpen-headingOne">
                <div class="accordion-body">

                    <!--Container Vehiculos-->


                    <table class="table table-dark table-striped">
                        <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Patente</th>
                            <th scope="col">Número de chasis</th>
                            <th scope="col">Número de motor</th>
                            <th scope="col">Marca</th>
                            <th scope="col">Modelo</th>
                            <th scope="col">Kilometraje</th>
                            <th scope="col">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#todosLosVehiculos}}
                            <tr>
                                <td>{{id}}</td>
                                <td>{{patente}}</td>
                                <td>{{numero_chasis}}</td>
                                <td>{{numero_motor}}</td>
                                <td>{{marca}}</td>
                                <td>{{modelo}}</td>
                                <td>{{kilometraje}}</td>
                                <td><form
                                        action="/gerente/irModificarVehiculo"
                                        method="post"
                                        class="card-link text-decoration-none d-inline-block"
                                >
                                    <input
                                            type="hidden"
                                            name="idUsuario"
                                            value="{{ id }}"
                                    />
                                    <button type="submit" class="btn btn-primary ms-1">
                                        Modificar
                                    </button>
                                </form>
                                    <form
                                            action="/gerente/BorrarVehiculo"
                                            method="post"
                                            class="card-link text-decoration-none d-inline-block"
                                    >
                                        <input
                                                type="hidden"
                                                name="idUsuario"
                                                value="{{ id }}"
                                        />
                                        <button type="submit" class="btn btn-danger ms-1">
                                            Borrar
                                        </button>
                                    </form></td>
                            </tr>
                        {{/todosLosVehiculos}}
                        </tbody>
                    </table>


                    {{#rutaCuartoBoton}}
                    <div class="d-flex justify-content-end">
                        <a class="btn btn-primary mt-3" href="{{rutaCuartoBoton}}" role="button">Registrar un vehiculo</a>
                    </div>
                    {{/rutaCuartoBoton}}
                    <!--Fin Container Vehiculos-->


                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!--Fin Vehiculos-->
</div>

<!-- Optional JavaScript; choose one of the two! -->
<!-- Option 1: Bootstrap Bundle with Popper -->
<script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"
></script>
</body>