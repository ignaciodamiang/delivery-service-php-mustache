{{> header}}
{{>navbar}}
<body class="bg-light">
<div class="container mt-4 col-12 justify-content-center rounded">

    {{#url}}
        <a class="btn btn-primary mb-3" href="{{url}}" role="button"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"/>
        </svg></a>
    {{/url}}

  <div class="accordion" id="accordionPanelsStayOpenExample">
    <div class="accordion-item">
      <h2 class="accordion-header" id="panelsStayOpen-headingOne">
        <button
          class="accordion-button"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#panelsStayOpen-collapseOnes"
          aria-expanded="true"
          aria-controls="panelsStayOpen-collapseOne"
        >
          Agregar Vehículos
        </button>
      </h2>
      <div
        id="panelsStayOpen-collapseOnes"
        class="accordion-collapse collapse show"
        aria-labelledby="panelsStayOpen-headingOne"
      >
        <div class="accordion-body">
          <form action="/gerente/registrarVehiculo" method="post">
            <div class="form-row mb-2">
              <div class="form-group">
                <label class="font-weight-bold mb-1"
                  >Modelo<span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  required
                  name="modelo"
                  class="form-control"
                  placeholder="Modelo"
                />
              </div>
              <div class="form-group mt-3">
                <label class="font-weight-bold mb-1"
                  >Marca<span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  required
                  name="marca"
                  class="form-control"
                  placeholder="Marca"
                />
              </div>
              <div class="form-group mt-3">
                <label class="font-weight-bold mb-1"
                  >Número motor <span class="text-danger">*</span></label
                >
                <input
                  type="number"
                  required
                  name="NumeroMotor"
                  class="form-control"
                  placeholder="Número motor"
                />
              </div>
              <div class="form-group mt-3">
                <label class="font-weight-bold mb-1"
                  >Número chasis <span class="text-danger">*</span></label
                >
                <input
                  type="number"
                  required
                  name="NumeroChasis"
                  class="form-control"
                  placeholder="Número chasis"
                />
              </div>
              <div class="form-group mt-3">
                <label class="font-weight-bold mb-1"
                  >Patente<span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  required
                  name="patente"
                  class="form-control"
                  placeholder="Patente"
                />
              </div>
              <div class="form-group mt-3">
                <label class="font-weight-bold mb-1"
                  >Año fabricación<span class="text-danger">*</span></label
                >
                <input
                  type="date"
                  required
                  name="año_fabricacion"
                  class="form-control"
                  placeholder="Año fabricacion"
                />
              </div>
              <div class="form-group mt-3">
                <label class="font-weight-bold mb-1"
                  >Estado<span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  required
                  name="estado"
                  class="form-control"
                  placeholder="Estado"
                />
              </div>
              <div class="form-group mt-3">
                <label class="font-weight-bold mb-1"
                  >Alarma<span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  required
                  name="alarma"
                  class="form-control"
                  placeholder="Alarma"
                />
              </div>
              <div class="form-group mt-3">
                <label class="font-weight-bold mb-1"
                  >Kilometraje<span class="text-danger">*</span></label
                >
                <input
                  type="number"
                  required
                  name="kilometraje"
                  class="form-control"
                  placeholder="Kilometraje"
                />
              </div>
              <div class="form-group mt-3">
                <select
                  class="form-select"
                  aria-label="Default select example"
                  name="tipoVehiculo"
                >
                  <option selected>Seleccione que tipo de vehículo es</option>
                  <option value="1">Camioneta</option>
                  <option value="2">Camión</option>
                  <option value="3">Moto</option>
                  <option value="4">Auto</option>
                </select>
              </div>

                <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-primary col-5 col-md-2 mt-4">
                Registrar vehículo
              </button>
                </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
