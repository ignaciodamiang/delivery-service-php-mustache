<div class="container mb-5 col-12 justify-content-center rounded">
    <div class="accordion" id="accordionPanelsStayOpenExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                <button
                        class="accordion-button"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-collapseOnes"
                        aria-expanded="true"
                        aria-controls="panelsStayOpen-collapseOne"
                >
                    Agregar Arrastre
                </button>
            </h2>
            <div
                    id="panelsStayOpen-collapseOnes"
                    class="accordion-collapse collapse show"
                    aria-labelledby="panelsStayOpen-headingOne"
            >
                <div class="accordion-body">
                    <form action="/gerente/registrarArrastre" method="post">
                        <div class="form-row mb-2">

                            <div class="form-group mt-3">
                                <label class="font-weight-bold mb-1"
                                >Patente<span class="text-danger">*</span></label
                                >
                                <input
                                        type="text"
                                        required
                                        name="patente"
                                        class="form-control"
                                        placeholder="Patente"
                                />
                            </div>

                            <div class="form-group mt-3">
                                <label class="font-weight-bold mb-1"
                                >Número de chasis<span class="text-danger">*</span></label
                                >
                                <input
                                        type="number"
                                        required
                                        name="numeroDeChasis"
                                        class="form-control"
                                        placeholder="Número de chasis"
                                />
                            </div>

                            <div class="form-group mt-3">
                                <label class="font-weight-bold mb-1"
                                >Tipo<span class="text-danger">*</span></label
                                >
                                <input
                                        type="text"
                                        required
                                        name="tipo"
                                        class="form-control"
                                        placeholder="Tipo"
                                />
                            </div>

                            <div class="form-group mt-3">
                                <label class="font-weight-bold mb-1"
                                >Peso neto<span class="text-danger">*</span></label
                                >
                                <input
                                        type="number"
                                        required
                                        name="peso_Neto"
                                        class="form-control"
                                        placeholder="Peso neto"
                                />
                            </div>

                            <div class="form-group mt-3">
                                <select
                                        class="form-select"
                                        aria-label="Default select example"
                                        name="hazard"
                                >
                                    <option selected>Hazard</option>
                                    <option value="1">Si</option>
                                    <option value="0">No</option>
                                </select>
                            </div>

                            <div class="form-group mt-3">
                                <select
                                        class="form-select"
                                        aria-label="Default select example"
                                        name="reefer"
                                >
                                    <option selected>Reefer</option>
                                    <option value="1">Si</option>
                                    <option value="0">No</option>
                                </select>
                            </div>

                            <div class="form-group mt-3">
                                <label class="font-weight-bold mb-1"
                                >Temperatura<span class="text-danger">*</span></label
                                >
                                <input
                                        type="number"
                                        required
                                        name="temperatura"
                                        class="form-control"
                                        placeholder="Temperatura"
                                />
                            </div>

                            <button type="submit" class="btn btn-primary col-5 col-md-2 mt-4">
                                Registrar Arrastre
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

