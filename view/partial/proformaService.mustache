{{> header}} {{>navbar}}
<body class="bg-light">
<div class="container mt-5 mb-5 col-12 justify-content-center rounded">
    <div class="accordion" id="accordionPanelsStayOpenExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                <button
                        class="accordion-button"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-collapseOne"
                        aria-expanded="true"
                        aria-controls="panelsStayOpen-collapseOne"
                >
                    Cargar Service
                </button>
            </h2>
            <div
                    id="panelsStayOpen-collapseOne"
                    class="accordion-collapse collapse show"
                    aria-labelledby="panelsStayOpen-headingOne"
            >
                <div class="accordion-body">
                    {{#service}}
                        <form action="/mecanico/proformaService" method="post">
                            <div class="form-row mb-2">
                                <div class="form-group">
                                    <label class="font-weight-bold mb-1"
                                    >Fecha de Service<span class="text-danger">*</span></label
                                    >
                                    <input
                                            type="date"
                                            required
                                            name="fecha"
                                            value=""
                                            class="form-control"

                                    />
                                </div>

                                <div class="form-group mt-3">
                                    <label class="font-weight-bold mb-1"
                                    >Costo de Repuestos<span class="text-danger">*</span></label
                                    >
                                    <input
                                            type="number"
                                            required
                                            name="costo"
                                            value=""
                                            class="form-control"
                                            placeholder="ingrese costo"
                                    />
                                </div>

                                <div class="form-group mt-3">
                                    <label class="font-weight-bold mb-1"
                                    >Repuesto <span class="text-danger">*</span></label
                                    >
                                    <input
                                            type="text"
                                            required
                                            name="repuesto"
                                            value=""
                                            class="form-control"
                                            placeholder="describa repuesto"
                                    />
                                </div>



                                <input type="hidden" name="idService" value="{{ id }}" />

                                <button
                                        type="submit"
                                        class="btn btn-primary col-5 col-md-2 mt-4"
                                >
                                    Cargar Service
                                </button>
                            </div>
                        </form>
                    {{/service}}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Optional JavaScript; choose one of the two! -->
