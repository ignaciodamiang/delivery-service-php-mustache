<!--Vehiculos-->
<div class="container col-12 justify-content-center rounded">

    <div class="accordion" id="accordionPanelsStayOpenExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                <button class="accordion-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#acordeonTodosLosViajes" aria-expanded="true"
                        aria-controls="panelsStayOpen-collapseOne">Viajes</button>
            </h2>
            <div id="acordeonTodosLosViajes" class="accordion-collapse collapse show"
                 aria-labelledby="panelsStayOpen-headingOne">
                <div class="accordion-body">

                    <!--Container Vehiculos-->


                    <table class="table table-dark table-striped">
                        <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Ciudad origen</th>
                            <th scope="col">Ciudad destino</th>
                            <th scope="col">Fecha de inicio estimada</th>
                            <th scope="col">Fecha de fin estimada</th>
                            <th scope="col">Tipo de carga</th>
                            <th scope="col">Precio total estimado</th>
                            <th scope="col">Informe</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#todosLosViajes}}
                            <tr>
                                <td>{{id}}</td>
                                <td>{{ciudad_origen}}</td>
                                <td>{{ciudad_destino}}</td>
                                <td>{{fecha_inicio}}</td>
                                <td>{{fecha_fin}}</td>
                                <td>{{descripcion_carga}}</td>
                                <td>{{precioTotal_estimado}}</td>
                                <td>{{pdf}}</td>
                            </tr>
                        {{/todosLosViajes}}
                        </tbody>
                    </table>


                    {{#urlRegistrarViaje}}
                        <a class="btn btn-primary mt-3" href="{{urlRegistrarViaje}}" role="button">Registrar un viaje</a>
                    {{/urlRegistrarViaje}}
                    <!--Fin Container Vehiculos-->
                </div>
            </div>
        </div>
    </div>
</div>

</div>
<!--Fin Vehiculos-->
</div>