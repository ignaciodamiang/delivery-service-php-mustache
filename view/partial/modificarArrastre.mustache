{{> header}}
{{>navbar}}

<body class="bg-light">
  <div class="container mt-5 mb-5 col-12 justify-content-center rounded">
    <div class="accordion" id="accordionPanelsStayOpenExample">
      <div class="accordion-item">
        <h2 class="accordion-header" id="panelsStayOpen-headingOne">
          <button
            class="accordion-button"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#panelsStayOpen-collapseOne"
            aria-expanded="true"
            aria-controls="panelsStayOpen-collapseOne"
          >
            Modificar Arrastre
          </button>
        </h2>
        <div
          id="panelsStayOpen-collapseOne"
          class="accordion-collapse collapse show"
          aria-labelledby="panelsStayOpen-headingOne"
        >
          <div class="accordion-body">
            {{#arrastre}}
            <form action="/gerente/modificarArrastre" method="post">
              <div class="form-row mb-2">
                <div class="form-group">
                  <label class="font-weight-bold mb-1"
                    >Patente<span class="text-danger">*</span></label
                  >
                  <input
                    type="text"
                    required
                    name="patente"
                    value="{{ patente }}"
                    class="form-control"
                    placeholder="Patente"
                  />
                </div>

                <div class="form-group mt-3">
                  <label class="font-weight-bold mb-1"
                    >Numero de chasis<span class="text-danger">*</span></label
                  >
                  <input
                    type="text"
                    required
                    name="numeroDeChasis"
                    value="{{ numeroDeChasis }}"
                    class="form-control"
                    placeholder="Numero de chasis"
                  />
                </div>

                <div class="form-group mt-3">
                  <label class="font-weight-bold mb-1"
                    >Tipo <span class="text-danger">*</span></label
                  >
                  <input
                    type="text"
                    required
                    name="tipo"
                    value="{{ tipo }}"
                    class="form-control"
                    placeholder="Tipo"
                  />
                </div>

                <div class="form-group mt-3">
                  <label class="font-weight-bold mb-1"
                    >Peso neto <span class="text-danger">*</span></label
                  >
                  <input
                    type="number"
                    required
                    name="peso_Neto"
                    value="{{ peso_Neto }}"
                    class="form-control"
                    placeholder="Peso neto"
                  />
                </div>

                <div class="form-group mt-3">
                  <select
                    class="form-select"
                    aria-label="Default select example"
                    name="hazard"
                  >
                    <option selected>Hazard</option>
                    <option value="1">Si</option>
                    <option value="0">No</option>
                  </select>
                </div>

                <div class="form-group mt-3">
                  <select
                    class="form-select"
                    aria-label="Default select example"
                    name="reefer"
                  >
                    <option selected>Reefer</option>
                    <option value="1">Si</option>
                    <option value="0">No</option>
                  </select>
                </div>

                <div class="form-group mt-3">
                  <label class="font-weight-bold mb-1"
                    >Temperatura<span class="text-danger">*</span></label
                  >
                  <input
                    type="text"
                    required
                    name="temperatura"
                    value="{{ temperatura }}"
                    class="form-control"
                    placeholder="Temperatura"
                  />
                </div>

                <input type="hidden" name="idArrastre" value="{{ id }}" />

                <button
                  type="submit"
                  class="btn btn-primary col-5 col-md-2 mt-4"
                >
                  Modificar arrastre
                </button>
              </div>
            </form>
            {{/arrastre}}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Optional JavaScript; choose one of the two! -->
  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
    crossorigin="anonymous"
  ></script>
</body>
